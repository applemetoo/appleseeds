// Quick reference for JavaScript coding...

/*
    * randomize an array's list
    * using a switch statement
    * for loop
    * variables: arrays & objects
*/

/* 
    randomize an array's list
*/

  var colours = ["blue", "red", "yellow", "green", "purple"]
  colours.sort(function(a,b){return 0.5 - Math.random()});
  

/*
    using a switch statement
*/

  switch(expression) {
    case 0:
      code block
      break;
    case 1:
      code block;
      break;
    default:
      code block;
  }


/*
    for loop
*/

    var i;
    var colours = ["blue", "red", "yellow", "green", "purple"]
    
    for(i=0; i < colours.length; i++) {
        code block;    
    }


/*
    variables: arrays & objects
*/
    declaring a variable using objects:
        
        var myFruitBasketObjects = {
            lemons: 2,        // number of lemons
            oranges: 10,      // number of oranges
            apples: 3         // number of apples
        };
            
    declaring a variable using an array:
    
        var hamburgers = [10, "yummy", a_tmp];
